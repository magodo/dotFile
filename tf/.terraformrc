plugin_cache_dir = "$HOME/.terraform.d/plugin-cache"

# This is to makes the concurrent acctests to run successfully.
# Otherwise, you'll get errors like below:
#
#        Error: Required plugins are not installed
#
#       The installed provider plugins are not consistent with the packages selected
#       in the dependency lock file:
#         - registry.terraform.io/hashicorp/azuread: the cached package for registry.terraform.io/hashicorp/azuread 2.47.0 (in .terraform/providers) does not match any of the checksums recorded in the dependency lock file
plugin_cache_may_break_dependency_lock_file = true

provider_installation {
  dev_overrides {
    "hashicorp/azurerm"     = "/home/magodo/go/bin"
    "hashicorp/time"        = "/home/magodo/go/bin"
    "magodo/restful"        = "/home/magodo/go/bin"
    "magodo/demo"           = "/home/magodo/go/bin"
    "microsoft/azuredevops" = "/home/magodo/go/bin"
    "Azure/azapi"           = "/home/magodo/go/bin"
    "magodo/adoapi"         = "/home/magodo/go/bin"
  }

  direct {
    # exclude = [
    #   "hashicorp/azurerm",
    #   "magodo/restful",
    # ]
  }
}
